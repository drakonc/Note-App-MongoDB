<div class="col-md-5 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/delete/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" id="IdTitulo" placeholder="Titulo de la Nota" autofocus value="{{note.titulo}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" id="IdDescripcion" rows="5" placeholder="Descripcion de la Nota" class="form-control">{{note.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Editar</button>
                </div>
            </form>
        </div>
    </div>
</div>