<div class="col-md-5 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" id="IdTitulo" placeholder="Titulo de la Nota" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" id="IdDescripcion" rows="5" placeholder="Descripcion de la Nota" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Grabar</button>
                </div>
            </form>
        </div>
    </div>
</div>