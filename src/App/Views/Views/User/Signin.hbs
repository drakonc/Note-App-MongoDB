<div class="col-md-5 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Iniciar Sesión</h3>
        </div>
        <img src="/Img/logo.png" class="rounded-circle mx-auto d-block m-4 logo">
        <div class="card-body">
            <form action="/user/signin" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" id="IdEmail" placeholder="Ingresa tu Correo Electronico" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="IdPassword" placeholder="Ingresa tu Contraseña" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</div>